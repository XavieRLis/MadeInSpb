{% extends '::base.html.twig' %}
{% block page_title %}
    {{ pageTitle }}
{% endblock %}
{% block page_subtitle %}
    Список
{% endblock %}
{% block page_content %}
    {{ parent() }}
    <div class="box">
        <div class="box-body no-padding">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Название</th>
                        <th>Ссылки</th>
                    </tr>
                    {% for entity in entities %}
                        <tr>
                            <td>
                                {{ entity.title }}
                            </td>
                            <td>
                                {% for link in entity.links %}
                                    <a href="{{ link.url }}" target="_blank">{{ link.type.name }}</a>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}